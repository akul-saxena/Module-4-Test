<?php

/**
 * Implements hook_schema() to create a custom table for storing addresses.
 */
function buy_product_schema() {
  $schema['customer_address'] = [
    'description' => 'Stores customer address to buy product.',
    'fields' => [
      'uid' => [
        'type' => 'int',
        'not null' => TRUE,
        'description' => 'User ID',
      ],
      'address' => [
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'description' => 'User address',
      ],
    ],
    'primary key' => ['uid'],
  ];

  return $schema;
}
